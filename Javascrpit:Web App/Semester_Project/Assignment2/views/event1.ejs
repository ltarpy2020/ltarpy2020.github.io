<!--This is the event page, allows users to see what events there are, see what they created, updated, or deleted as well-->
<!DOCTYPE html>
<html lang="en-US">

  <head>
    <meta charset="utf-8" />

    <title>
      New Events
    </title>
    <link href = "/css/styles.css" rel = "stylesheet">

  </head>

  <body>
    <header>
        <div id = "pages">
        <a href = "/"> Homepage   || </a>
        <a href = "/events/new/">Create Events</a>
        </div>
        <div id = "Logo"><a href = "/"><img src = "/images/TarpyCorp.jpg" alt = "A Logo"></div></a>

    </header>
    <main>
    <h1 id = "otherH1">
        See our new events here
    </h1>

    <!--Needs an if statement to see other events users created or deleted-->
      <div id = "s">
        <%if(events.length) {%>
          <p id = "q">Select a event</p>
          <%events.forEach(events => {%>
            <p><%=events.category%></p>
            <a href = "/events/<%= events.id%>"> <p><%=events.title%></p><br></a>
          <% });
          } else {%>
              <p>There are no events to display</p>
          <%}%>
    </div>
    </main>
    <footer>
      <span>&copy;Tarpy Corp</span>
      <div id = "info">
        <a href = "/about">About   ||</a>
        <a href = "/contact">Contact</a>
      </div>
    </footer>
  </body>

</html>